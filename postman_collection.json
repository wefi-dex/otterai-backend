        { "name": "PUT /api/{{apiVersion}}/sales-calls/:id", "request": { "method": "PUT", "header": [ { "key": "Content-Type", "value": "application/json" } ], "body": { "mode": "raw", "raw": "{\n  \"status\": \"completed\"\n}" }, "url": "{{baseUrl}}/api/{{apiVersion}}/sales-calls/{{salesCallId}}" } },
