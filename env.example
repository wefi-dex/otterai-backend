# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=otterai_sales_analytics
DB_USER=postgres
DB_PASSWORD=your_password
DB_DIALECT=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# OtterAI API Configuration
OTTERAI_API_KEY=your_otterai_api_key
OTTERAI_API_URL=https://api.otter.ai
OTTERAI_WEBHOOK_SECRET=your_otterai_webhook_secret

# IDrive E2 Configuration (for file storage)
IDRIVE_E2_ENDPOINT=https://d3t1.va01.idrivee2-92.com
IDRIVE_E2_ACCESS_KEY_ID=your_idrive_e2_access_key
IDRIVE_E2_SECRET_ACCESS_KEY=your_idrive_e2_secret_key
IDRIVE_E2_BUCKET=otterai-history
IDRIVE_E2_REGION=us-east-1
IDRIVE_E2_BASE_URL=https://d3t1.va01.idrivee2-92.com

# Twilio Configuration (for SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=OtterAI Sales Analytics

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=104857600
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Socket.IO
SOCKET_CORS_ORIGIN=http://localhost:3000
