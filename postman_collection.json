            "body": { "mode": "raw", "raw": "{\n  \"userId\": \"00000000-0000-0000-0000-000000000000\",\n  \"type\": \"reminder\",\n  \"title\": \"Reminder\",\n  \"message\": \"Complete your tasks\"\n}" },
            "url": "{{baseUrl}}/api/{{apiVersion}}/notifications"
