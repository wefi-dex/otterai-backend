          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "file", "type": "file", "src": [] },
                { "key": "category", "value": "general", "type": "text" },
                { "key": "description", "value": "Optional description", "type": "text" }
              ]
            },
            "url": "{{baseUrl}}/api/{{apiVersion}}/files/upload"
          }
        },
        {
          "name": "POST /api/{{apiVersion}}/files/upload-sales-call",
          "request": {
            "method": "POST",
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "recording", "type": "file", "src": [] },
                { "key": "salesCallId", "value": "{{salesCallId}}", "type": "text" },
                { "key": "description", "value": "Call recording", "type": "text" }
              ]
            },
            "url": "{{baseUrl}}/api/{{apiVersion}}/files/upload-sales-call"
          }
        },
        { "name": "GET /api/{{apiVersion}}/files/:fileKey", "request": { "method": "GET", "url": "{{baseUrl}}/api/{{apiVersion}}/files/{{fileKey}}" } },
        { "name": "GET /api/{{apiVersion}}/files/:fileKey?download=true", "request": { "method": "GET", "url": "{{baseUrl}}/api/{{apiVersion}}/files/{{fileKey}}?download=true" } },
        { "name": "DELETE /api/{{apiVersion}}/files/:fileKey", "request": { "method": "DELETE", "url": "{{baseUrl}}/api/{{apiVersion}}/files/{{fileKey}}" } },
        { "name": "GET /api/{{apiVersion}}/files/status", "request": { "method": "GET", "url": "{{baseUrl}}/api/{{apiVersion}}/files/status" } }
