        { "name": "GET /api/{{apiVersion}}/users", "request": { "method": "GET", "url": "{{baseUrl}}/api/{{apiVersion}}/users?page=1&limit=10" } },
        { "name": "GET /api/{{apiVersion}}/users/:id", "request": { "method": "GET", "url": "{{baseUrl}}/api/{{apiVersion}}/users/{{userId}}" } },
        {
          "name": "POST /api/{{apiVersion}}/users",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"rep@example.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"Bob\",\n  \"lastName\": \"Smith\",\n  \"role\": \"sales_representative\"\n}" },
            "url": "{{baseUrl}}/api/{{apiVersion}}/users"
          }
        },
        {
          "name": "PUT /api/{{apiVersion}}/users/:id",
          "request": {
            "method": "PUT",
