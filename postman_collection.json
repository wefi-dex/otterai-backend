        { "name": "GET /api/{{apiVersion}}/organizations/:id", "request": { "method": "GET", "url": "{{baseUrl}}/api/{{apiVersion}}/organizations/{{organizationId}}" } },
        {
          "name": "POST /api/{{apiVersion}}/organizations",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Acme Branch\",\n  \"type\": \"branch\",\n  \"subscriptionPlan\": \"basic\"\n}" },
            "url": "{{baseUrl}}/api/{{apiVersion}}/organizations"
          }
        },
        { "name": "PUT /api/{{apiVersion}}/organizations/:id", "request": { "method": "PUT", "header": [ { "key": "Content-Type", "value": "application/json" } ], "body": { "mode": "raw", "raw": "{\n  \"name\": \"Acme Updated\"\n}" }, "url": "{{baseUrl}}/api/{{apiVersion}}/organizations/{{organizationId}}" } },
        { "name": "DELETE /api/{{apiVersion}}/organizations/:id", "request": { "method": "DELETE", "url": "{{baseUrl}}/api/{{apiVersion}}/organizations/{{organizationId}}" } },
        { "name": "GET /api/{{apiVersion}}/organizations/:id/branches", "request": { "method": "GET", "url": "{{baseUrl}}/api/{{apiVersion}}/organizations/{{organizationId}}/branches" } },
        { "name": "GET /api/{{apiVersion}}/organizations/:id/stats", "request": { "method": "GET", "url": "{{baseUrl}}/api/{{apiVersion}}/organizations/{{organizationId}}/stats" } }
      ]
    },
    {
      "name": "Sales Calls",
      "item": [
        { "name": "GET /api/{{apiVersion}}/sales-calls", "request": { "method": "GET", "url": "{{baseUrl}}/api/{{apiVersion}}/sales-calls?page=1&limit=10" } },
        { "name": "GET /api/{{apiVersion}}/sales-calls/:id", "request": { "method": "GET", "url": "{{baseUrl}}/api/{{apiVersion}}/sales-calls/{{salesCallId}}" } },
        {
          "name": "POST /api/{{apiVersion}}/sales-calls",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"customerName\": \"John Customer\",\n  \"appointmentDate\": \"2025-01-01T10:00:00Z\",\n  \"salesRepresentativeId\": \"00000000-0000-0000-0000-000000000000\"\n}" },
            "url": "{{baseUrl}}/api/{{apiVersion}}/sales-calls"
          }
