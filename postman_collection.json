            "url": "{{baseUrl}}/api/{{apiVersion}}/users/{{userId}}"
          }
        },
        { "name": "DELETE /api/{{apiVersion}}/users/:id", "request": { "method": "DELETE", "url": "{{baseUrl}}/api/{{apiVersion}}/users/{{userId}}" } }
      ]
    },
    {
      "name": "Organizations",
