        {
          "name": "POST /api/{{apiVersion}}/sales-calls/:id/complete",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"outcome\": \"sale\",\n  \"saleAmount\": 1000\n}" },
            "url": "{{baseUrl}}/api/{{apiVersion}}/sales-calls/{{salesCallId}}/complete"
          }
        }
      ]
    },
    {
      "name": "Analytics",
      "item": [
        { "name": "GET /api/{{apiVersion}}/analytics/overview", "request": { "method": "GET", "url": "{{baseUrl}}/api/{{apiVersion}}/analytics/overview" } },
        { "name": "GET /api/{{apiVersion}}/analytics/performance", "request": { "method": "GET", "url": "{{baseUrl}}/api/{{apiVersion}}/analytics/performance" } },
        { "name": "GET /api/{{apiVersion}}/analytics/user/:userId", "request": { "method": "GET", "url": "{{baseUrl}}/api/{{apiVersion}}/analytics/user/{{userId}}" } },
        { "name": "GET /api/{{apiVersion}}/analytics/trends", "request": { "method": "GET", "url": "{{baseUrl}}/api/{{apiVersion}}/analytics/trends" } }
      ]
    },
    {
